{
    "compilerOptions": {
        "moduleResolution": "Bundler",
        "target": "ES6",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "experimentalDecorators": true,
        "useDefineForClassFields": true
    },
    "include": ["src/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*_test.ts"]
}
